{
  "name": "@sjroe/heat",
  "version": "2021.02.13",
  "description": "Performant heat map for Svelte",
  "module": "dist/index.js",
  "svelte": "dist/index.js",
  "types": "dist/index.t.d",
  "files": [
    "dist"
  ],
  "keywords": [
    "svelte",
    "charts",
    "heatmap",
    "dataviz"
  ],
  "bugs": {
    "url": "https://github.com/sjroe/heat/issues"
  },
  "homepage": "https://github.com/sjroe/heat#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/sjroe/heat"
  },
  "license": "MIT",
  "author": "Stephen Roe",
  "scripts": {
    "build": "tsc -b && node ./scripts/preprocess.js",
    "dev": "nodemon -e svelte,ts -w src --exec 'npm run build'",
    "validate": "svelte-check --ignore dist",
    "lint": "eslint src",
		"install:site": "yarn --cwd site install",
		"deploy": "npm run build && cd site && npm run export"
  },
  "dependencies": {
    "@types/d3-scale-chromatic": "^2.0.0",
    "d3-scale-chromatic": "^2.0.0"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chokidar": "^3.5.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-svelte3": "^3.0.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.1",
    "postcss-load-config": "^3.0.1",
    "postcss-preset-env": "^6.7.0",
    "svelte": "^3.31.0",
    "svelte-check": "^1.1.34",
    "svelte-preprocess": "^4.6.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  }
}
